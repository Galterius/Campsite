<%- include ('../partials/header.ejs') -%>

 <div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Village Camperz</h1>
            <p>View nice and quite villages where you can camp with your friends</p>
            <p>
                <a class="btn btn-primary" href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>    
    </header>


    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campGrounds.forEach(element=>{ %>
            <div class="col-md-4 col-sm-4">
                <div class="figure img-thumbnail">
                    <img class="figure-img img-fluid rounded" src="<%= element.image %> ">
                    <div class="figure-caption">
                        <h4><%= element.name %> </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>

            </div>

        <% }); %>
    </div>

 </div>

<%- include ('../partials/footer.ejs') -%>