<%- include('../partials/header.ejs') -%>

<div class="container">
    
    <h1 style="text-align: center;">Add a new Campground</h1>
    <div style="width: 30%; margin: 35px auto;">
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Camp name" name="campName">
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" placeholder="image abot the camp" name="imgUrl">
        </div>

        <div class="form-group">
            <input class="form-control" type="number" placeholder="Price per night" name="campPrice" min="0.01" step="0.01">
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" placeholder="description" name="description">
        </div>

        <div class="form-group">
            <button class="btn btn-outline-success btn-block">Submit</button>
        </div>
        
    </form>
    <a href="/campgrounds">Back to campgrounds</a>
    </div>
    
    
</div>

